<?xml version="1.0" encoding="UTF-8"?>
<manifest>
  <!-- Define a remote repository -->
  <remote fetch="https://github.com/kjwsl" name="origin"></remote>
  <!-- Set default attributes for projects -->
  <default remote="origin" revision="master" sync-j="4"></default>
  <!-- Define individual projects -->
  <project branch="master" name=".dotfiles" path="projects/dotfiles"></project>
  <project branch="master" name="nvim-config" path="projects/nvim-config"></project>
  <linkfile dest="projects/dotfiles/.config/nvim" src="projects/nvim-config"></linkfile>
  <!-- Example of including another manifest -->
  <!-- <include name="additional_projects.xml" /> -->
</manifest>
